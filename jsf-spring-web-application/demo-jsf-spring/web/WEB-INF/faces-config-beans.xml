<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">

	<managed-bean>
		<managed-bean-name>LoginBean</managed-bean-name>
		<managed-bean-class>demo.jsf_spring_app.presentation.LoginBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>ApplicationBean</managed-bean-name>
		<managed-bean-class>demo.jsf_spring_app.presentation.ApplicationBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>SessionBean</managed-bean-name>
		<managed-bean-class>demo.jsf_spring_app.presentation.SessionBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>ProfilBean</managed-bean-name>
		<managed-bean-class>demo.jsf_spring_app.presentation.tabs.ProfilBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>FisiereBean</managed-bean-name>
		<managed-bean-class>demo.jsf_spring_app.presentation.tabs.FisiereBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>CautareBean</managed-bean-name>
		<managed-bean-class>demo.jsf_spring_app.presentation.tabs.CautareBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

</faces-config>